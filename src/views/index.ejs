        <ul>
            <% tasks.forEach(task => { %>
                <li class="<%= task.isCompleted() ? 'completed' : '' %>" data-priority="<%= task.priority %>">
                    <div class="task-info">
                        <% if (task.priority === 'Urgent') { %>
                            <span class="urgent-badge">URGENT</span>
                        <% } %>
                        <%= task.getDetails() %>
                    </div>
                    <div class="task-actions">
                        <form action="/complete/<%= task.getId() %>" method="POST">
                            <button type="submit">Complete</button>
                        </form>
                        <form action="/delete/<%= task.getId() %>" method="POST" class="delete">
                            <button type="submit" style="background-color: red;" 
                                onmouseover="this.style.backgroundColor='#bd1212'"  
                                onmouseout="this.style.backgroundColor='red'">
                                Delete
                            </button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
        
